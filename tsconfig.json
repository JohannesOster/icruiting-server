{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {"*": ["src/*"]},
    "outDir": "dist",
    "target": "es5",
    "lib": ["es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["typings", "node_modules/@types"]
  }
}

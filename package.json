{
  "name": "icruiting-api",
  "version": "0.1.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules ./src/index.ts",
    "start": "pm2-runtime start dist/ecosystem.config.js --env production",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json && yarn copy-files",
    "copy-files": "copyfiles -u 1 \"src/**/*/*.sql\" \"src/**/*/*.pug\" \"src/**/*/*.css\" \"src/**/*/*.xml\" dist/",
    "db-migrate": "ts-node ./src/infrastructure/db/migrate.ts dbMigrate update",
    "db-drop": "ts-node ./src/infrastructure/db/migrate.ts dbMigrate drop-all",
    "db-sync": "ts-node ./src/infrastructure/db/migrate.ts dbMigrate changelogSync",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest --projects tests/unit/jest.config.js --detectOpenHandles",
    "test:integration": "jest --projects tests/integration/jest.config.js --runInBand --detectOpenHandles",
    "heroku-prebuild": "yarn install --dev",
    "lint": "tslint --project ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "projects": [
      "<rootDir>/tests/unit/jest.config.js",
      "<rootDir>/tests/integration/jest.config.js"
    ]
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^5.2.12",
    "aws-sdk": "^2.1677.0",
    "cognito-express": "^3.0.4",
    "convict": "^6.2.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^6.9.2",
    "faker": "^4.1.0",
    "formidable": "2.0.0-canary.20200504.1",
    "humps": "^2.0.1",
    "liquibase": "^4.28.1",
    "lodash": "^4.17.20",
    "make-runnable": "1.4.1",
    "nodemailer": "^6.9.14",
    "pg-promise": "^11.9.1",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "pm2": "^5.4.2",
    "prettier": "^3.3.3",
    "pug": "^3.0.3",
    "stripe": "^10.17.0",
    "ts-node": "^10.9.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^3.0.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/convict": "^6.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/faker": "^4.1.12",
    "@types/formidable": "^1.0.32",
    "@types/humps": "^2.0.6",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/nodemailer": "^6.4.15",
    "@types/pug": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "babel-plugin-styled-components": "^2.1.4",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.5.4"
  }
}

{
  "name": "icruiting-api",
  "version": "0.1.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules ./src/index.ts",
    "start": "yarn db-migrate && NODE_PATH=dist/ node dist/index.js",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json && yarn copy-files",
    "copy-files": "copyfiles -u 1 \"src/**/*/*.sql\" \"src/**/*/*.pug\" \"src/**/*/*.css\" dist/",
    "db-migrate": "ts-node ./src/infrastructure/db/migrate.ts dbMigrate update",
    "db-drop": "ts-node ./src/infrastructure/db/migrate.ts dbMigrate drop-all",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest --projects tests/unit/jest.config.js --detectOpenHandles",
    "test:integration": "jest --projects tests/integration/jest.config.js --runInBand --detectOpenHandles",
    "heroku-prebuild": "yarn install --dev",
    "lint": "tslint --project ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "projects": [
      "<rootDir>/tests/unit/jest.config.js",
      "<rootDir>/tests/integration/jest.config.js"
    ]
  },
  "dependencies": {
    "amazon-cognito-identity-js": "^5.2.12",
    "aws-sdk": "^2.841.0",
    "cognito-express": "^3.0.1",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.2",
    "express-validator": "^6.9.2",
    "faker": "^4.1.0",
    "formidable": "2.0.0-canary.20200504.1",
    "humps": "^2.0.1",
    "liquibase": "^4.4.0",
    "lodash": "^4.17.20",
    "nodemailer": "^6.4.18",
    "pg-promise": "^10.9.2",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "stripe": "^10.17.0",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.13.3",
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/faker": "^4.1.12",
    "@types/formidable": "^1.0.32",
    "@types/humps": "^2.0.0",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.168",
    "@types/nodemailer": "^6.4.0",
    "@types/pug": "^2.0.4",
    "@types/puppeteer": "^3.0.5",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "babel-plugin-styled-components": "^1.12.0",
    "jest": "^26.6.3",
    "make-runnable": "1.3.3",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4"
  }
}

{
  "name": "icruiting-api",
  "version": "0.1.3",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules ./src/index.ts",
    "start": "NODE_PATH=dist/src node dist/src/index.js",
    "build": "rimraf ./dist && tsc && npm run copy-files",
    "copy-files": "npx copyfiles \"src/**/*/*.sql\" \"src/**/*/*.pug\" \"src/**/*/*.css\" dist/",
    "db-migrate": "npx ts-node ./src/infrastructure/db/flyway.ts flyway migrate",
    "db-drop": "npx ts-node ./src/infrastructure/db/flyway.ts flyway clean",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npx jest --projects tests/unit/jest.config.js",
    "test:integration": "npx jest --projects tests/integration/jest.config.js --runInBand --detectOpenHandles",
    "heroku-prebuild": "npm install --dev",
    "lint": "tslint --project ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "projects": [
      "<rootDir>/tests/unit/jest.config.js",
      "<rootDir>/tests/integration/jest.config.js"
    ]
  },
  "dependencies": {
    "@prettier/plugin-pug": "^1.13.3",
    "amazon-cognito-identity-js": "^4.5.10",
    "aws-sdk": "^2.841.0",
    "body-parser": "^1.19.0",
    "cognito-express": "^2.0.18",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "faker": "^4.1.0",
    "formidable": "2.0.0-canary.20200504.1",
    "humps": "^2.0.1",
    "jstat": "^1.9.4",
    "lodash": "^4.17.20",
    "nodemailer": "^6.4.18",
    "pg-promise": "^10.9.2",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "stripe": "^8.135.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/faker": "^4.1.12",
    "@types/formidable": "^1.0.32",
    "@types/humps": "^2.0.0",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.168",
    "@types/nodemailer": "^6.4.0",
    "@types/pug": "^2.0.4",
    "@types/puppeteer": "^3.0.5",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "babel-plugin-styled-components": "^1.12.0",
    "jest": "^26.6.3",
    "make-runnable": "^1.3.8",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.1",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.9"
  }
}
